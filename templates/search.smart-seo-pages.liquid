{%- layout none -%}

{%- paginate search.results by 10 -%}
{%- if search.performed -%}
{"pages": [
    {%- for item in search.results -%}
        {"id":{{ item.id | json }},"title":{{ item.title | json }},"handle":{{ item.handle | json }}}
        {%- unless forloop.last %},{% endunless -%}
    {%- endfor -%}
]},
"count": {{search.results_count}}}
{%- endif -%}
{%- endpaginate -%}