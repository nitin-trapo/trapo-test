<div class="container">
<div class="hub_location">
  
  <div class="section-header center">
    
    <h2>Come and enjoy the Trapo Hub experience</h2>
  </div>
  <div class="container">
    <div class="full_row">
        <div class="left">
          <ul class="location_slider">
            <li>
              <div class="img-wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/1-8.png?v=1635179724" />
              </div>
              <span class="text-tag">Trapo Melaka Raya hub</span>
            </li>
            <!--<li>
              <div class="img-wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/loc1.png?v=1635761150" />
              </div>
              <span class="text-tag">trapo zervex hub</span>
            </li>-->
          </ul>
        </div>
        <div class="right">
          <h4>Drop by one of our 5 installation hubs to see what else we have to offer you.</h4>
          <ul class="services">
            <li>
              <div class="img_wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/2-8.png?v=1635179725">
              </div>
              <h3 class="title">Free installation Service</h3>
            </li>
            <li>
              <div class="img_wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/3-8.png?v=1635179725">
              </div>
              <h3 class="title">Free Vacuuming Service</h3>
            </li>
            <li>
              <div class="img_wrapper">
                <img src="https://cdn.shopify.com/s/files/1/0234/7089/9277/files/4-8.png?v=1635179724">
              </div>
              <h3 class="title">Nanopro Coating Service</h3>
            </li>
          </ul>
		</div>
  	</div>
    <div class="btn-wrapper center">
      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="action_button continue-button btn">
            {{ section.settings.button_label | escape }}
          </a>
        {% endif %}
    </div>
  </div>
</div>
</div>
{% schema %}
  {
    "name": "hub-loction",
	"class": "hub_locations",
    "settings": [
		{
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Text columns with images"
      },
		{
            "type": "text",
            "id": "button_label",
            "label": "Button label"
          },
          {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }
		
	],
	"presets": [
      {
        "name": "hub-location",
        "category": "Text"          
      }
    ]
  }
{% endschema %}

